<h1>Login</h1>

<% if flash[:error] %>
<strong><%= flash[:error] %></strong> <!-- # if they get a password wrong  -->
<br>
<% end %>

<%= form_tag login_path do %>
<span>
<%= label_tag :email%>
<%= email_field_tag :email, nil , placeholder:"Enter email" %>
</span>
 <span>
<%= label_tag :password %>
<%= password_field_tag :password, nil , placeholder:"Password" %>
</span>
<br>
<%= submit_tag 'Login'%>
<% end %>
