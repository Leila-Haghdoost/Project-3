<!DOCTYPE html>
<html>
  <head>
    <title>Project3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= cloudinary_js_config %>
  </head>


  <body>
    <div class="header">
          <div class="headerImage">
            <%= image_tag "Logo.png" , :width=>220 , class:"logoimage" %>
          </div>
            <% if @current_user.present? %>
            <div class="headerImage" id="profileImage">
              <%= cl_image_tag @current_user.profile_image, :width=>100, :height=>100, :gravity=>"faces", :crop=>"fill" , class:"profileImage"%>
            </div>
            <div class="welcomText">
              <h4>Welcome, <%= @current_user.name %></h4>
            </div>
              <% end %>


        <!-- ///////////Nav Items///////////// -->
    </div>
    <div class="navbar">

                 <%= link_to 'Home', root_path %>

                 <% if @current_user.present? %>
                  <%= link_to 'My Account', edit_user_path(@current_user.id) %>
                 <%= link_to 'Logout', login_path, method: 'delete' %>
                 <%= link_to 'Collection', app_path + '#/collections' %>

                 <% else %>

                <div>
                 <%= link_to 'Login', login_path %>
                 </div>

                 <%= link_to 'Sign up', new_user_path  %>
                 <% end %>
    </div>

    <div id="app"></div>


    <%# javascript_pack_tag 'application' %>


    <%= yield %>
    <div class="footer">
      <h2>Footer</h2>
    </div>

  </body>
</html>
